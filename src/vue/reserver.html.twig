{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Réserver {% endblock %}
{% block pasCentre %}
<br/><br/>
    <form method="POST" action="index.php?page=reserver">
        <div class = "form-row">
            <div class ="col-md-1"></div>
            <div class="col-md-4">
                <label for="validationCustom01">Association</label>
                <select class="form-control" name="Role" id="Role" style="margin-bottom: 20px" >
                    <option value="0">(Aucune) </option>
                    {% for a in listeAssociation %}
                    <option value="{{ a.id }}">{{ a.NomAssociation }}</option>
                    {% endfor %}
                </select>
                <div >
                    <label for="validationCustom01">Nom du locataire</label>
                    <input type="text" class="form-control" id="validationCustom01" value="Mark" required>
                </div>
                <div class="">
                    <label for="validationCustom02">Prenom du locataire</label>
                    <input type="text" class="form-control" id="validationCustom02" value="Otto" required>
                </div>
                <div class="">
                    <label for="validationCustomUsername">Adresse du locataire</label>
                    <input type="text" class="form-control" id="validationCustomUsername" aria-describedby="inputGroupPrepend" required>
                </div>
                <div class="">
                    <label for="validationCustom01">Email du locataire</label>
                    <input type="text" class="form-control" id="validationCustom01" value="Mark" required>
                </div>
                <div class="">
                    <label for="validationCustom01">Numéro de téléphone du locataire</label>
                    <input type="text" class="form-control" id="validationCustom01" value="Mark" required>
                </div>
                <div class="">
                    <label for="validationCustom01">Motif de la réservation</label>
                    <input type="text" class="form-control" id="validationCustom01" value="Mark" required>
                </div>
                <br/><br/>
            </div>
            <div class ="col-md-2"></div>
            <div class="col-md-4">
                <label for="validationCustom01">Salle</label>
                <select class="form-control" name="Role" id="Role" style="margin-bottom: 20px" >
                    <option value="1">Salle 1 </option>
                    <option value="2">Salle 2</option>
                </select>
                <label for="validationCustom01">Options</label>
                <br/><br/>
                <div class="">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="{{ s.id }}" id="optionSalle[]" name="optionSalle[]">
                        <label class="form-check-label" for="optionSalle[]">
                            option 1
                        </label>
                    </div>
                </div>
            </div>
            <div class ="col-md-1"></div>
            <div class ="col-md-3"></div>
            <div class ="col-md-3">
                <div class="">
                    <label for="validationCustomUsername">Date et heure début</label>
                    <input type="datetime-local" class="form-control" id="validationCustomUsername" aria-describedby="inputGroupPrepend" required>
                </div>
            </div>
            <div class ="col-md-3">
                <div class="">
                    <label for="validationCustomUsername">Date et heure fin</label>
                    <input type="datetime-local" class="form-control" id="validationCustomUsername" aria-describedby="inputGroupPrepend" required>
                </div>
                <br/><br/>

            </div>
            <div class ="col-md-3"></div>
            <div class ="col-md-4"></div>
            <button class=" btn-lg btn-success col-md 4">Valider</button>
            <div class ="col-md-4"></div>
        </div>


    </form>


{% endblock %}